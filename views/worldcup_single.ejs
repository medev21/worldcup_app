<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head.ejs %>
  </head>
  <body>
    <% include partials/header.ejs %>
    <header style="background-image: url('<%= worldcup.champion_img %>');">

      <div class="header-content">
         <div class="header-content-inner">
             <h1><%= title %></h1>
             <a class="btn btn-primary btn-xl travel-button">Learn More</a>
         </div>
     </div>
    </header>

    <section id="main" style="position: relative;">
      <div class="container" style="position: absolute; height: 100%; width: 100%;">
        <div class="row" style="height: 100%;">
          <div class="col-sm-4" style="height: 100%;">
            <img src="/images/<%= worldcup.poster %>" alt="" class="img-responsive img-rounded worldcup-poster"/>
          </div>
          <div class="col-sm-8" style="height: 100%;">
            <div class="row">
              <div class="well">
                <h2>Host</h2>
                <p><%= worldcup.host %></p>
              </div>
            </div>

            <br>

            <div class="row">
              <div class="well">
                <h2>Winner</h2>
                <p><%= worldcup.champions %></p>
              </div>
            </div>

          </div>
        </div>
      </div>
    </section>

    <% include partials/footer.ejs %>
    <% include partials/script.ejs %>
  </body>
</html>
