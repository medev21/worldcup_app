<!DOCTYPE html>
<html lang="en">
  <head>
    <% include partials/head.ejs %>
  </head>
  <body>
    <%# <h1>Hello, world!</h1>%>
    <% include partials/header.ejs %>

      <header>
        <div class="header-content">
           <div class="header-content-inner">
               <h1><%= title %></h1>
               <a href="#" class="btn btn-primary btn-xl travel-button">Travel through time!</a>
           </div>
       </div>
      </header>

      <section id="main">
        <div class="container">
          <div class="row">

            <div class="col-md-10 col-md-offset-1">
            <% for(var i=0; i < worldcups.length; i++){ %>

              <a href="/world_cup_single/<%= worldcups[i].year %>">
                <div class="col-md-4 img-overlay">
                  <img src="images/<%= worldcups[i].poster %>" alt="" class="img-responsive img-rounded poster"/>
                  <div class="poster-overlay">
                    <h2><%= worldcups[i].year %></h2>
                    <h3>View More <i class="fa fa-arrow-right"></i>
                  </div>
                </div>
              </a>


            <% } %>

          </div>


          </div>
        </div>
      </section>


    <% include partials/footer.ejs %>
    <% include partials/script.ejs %>
  </body>
</html>
